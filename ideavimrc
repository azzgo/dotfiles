" setting leader key
let mapleader=" "
let g:mapleader=" "

set updatetime=300
set timeoutlen=800

" line numbers
set number
set relativenumber

" disable wrap
set nowrap

" quick save and quit
nnoremap <leader>w :w<CR>
nnoremap <leader>q :q<CR>
" quick copy from primiary clipboard
xnoremap <leader>y "+y
xnoremap <leader>p "+p

" map Q to q for ex mode is not usable for me
map Q q

" tabs 
nnoremap <silent> <leader>nt :tabnew<CR> 
nnoremap <silent> [t :tabprevious<CR> 
nnoremap <silent> ]t :tabnext<CR>

" map alt + n -> tab n
nnoremap <A-1> 1gt
nnoremap <A-2> 2gt
nnoremap <A-3> 3gt
nnoremap <A-4> 4gt
nnoremap <A-5> 5gt

" emacs  like kemap in insert mode
inoremap <c-a> <home>
inoremap <c-e> <end>
inoremap <c-f> <right>
inoremap <c-b> <left>
cnoremap <c-a> <home>
cnoremap <c-b> <left>
cnoremap <c-e> <end>
" move line down/up
nnoremap <A-j> :m .+1<cr>==
nnoremap <A-k> :m .-2<cr>==
inoremap <A-j> <esc>:m .+1<cr>==gi
inoremap <A-k> <esc>:m .-2<cr>==gi
vnoremap <A-j> :m '>+1<cr>gv
vnoremap <A-k> :m '<-2<cr>gv

"better intent
vnoremap < <gv
vnoremap > >gv

"========================
"       Action Mapper
"========================
" code format
:map <leader>cf <Action>(ReformatCode)

" code action
:map ca <Action>(ShowIntentionActions)
:map cv <Action>(IntroduceVariable)
:map cr <Action>(RefactoringMenu)
:map cl <Action>(Refactorings.QuickListPopupAction)

" code navigation
:map gr <Action>(GotoRelated)
:map gR <Action>(FindUsages)
:map gi <Action>(GotoImplementation)
:map gd <Action>(GotoDeclaration)
:map gD <Action>(GotoTypeDeclaration)
:map gu <Action>(FindUsages)

:map [d <Action>(GotoPreviousError)
:map ]d <Action>(GotoNextError)

" fold
:map za <Action>(ExpandCollapseToggleAction)

" vsc
:map <leader>hp <Action>(VcsShowCurrentChangeMarker)
:map <leader>hr <Action>(Vcs.RollbackChangedLines)
:map [h <Action>(VcsShowPrevChangeMarker)
:map ]h <Action>(VcsShowNextChangeMarker)
:map <leader>gb <Action>(Annotate)
" git actions
:map <leader>gg <Action>(ActivateVersionControlToolWindow)
:map <leader>gc <Action>(CheckinProject)
:map <leader>gf <Action>(Vcs.ShowTabbedFileHistory)


" find file
:map <leader>f <Action>(GotoFile)
:map <leader>/ <Action>(FindInPath)

" outline
:map <leader>o <Action>(ActivateStructureToolWindow)

"only editor
:map <A-o> <Action>(HideAllWindows)

" dignostic 
:map <C-k> <Action>(ShowErrorDescription)

" fix c-o can not back
:map <C-o> <Action>(Back)
:map <f2> <Action>(RenameElement)

"========================
"       Plugins
"========================

Plug 'preservim/nerdtree'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
 

"Find Actions
:map <leader>hh <Action>(GotoAction)

" Exploerer
:map <leader>nn :NERDTreeToggle<CR>
:map <leader>nf ::NERDTreeFind<CR>

" KJump must install the plugin
" easymotion has bugs on my machine
nmap s :action KJumpAction<cr>
vmap s :action KJumpAction<cr>
omap <leader>s :action KJumpAction<cr>

